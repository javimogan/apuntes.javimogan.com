---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Layout from "./Layout.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<Layout title={title} description={description}>
	<main
		class="flex flex-col w-full items-center content-center justify-center p-4"
	>
		<article
			class="container flex flex-col content-center items-center gap-4"
		>
			<div class="w-full flex-col md:flex-row flex gap-4 justify-center">
				<div class="w-full md:w-2/3 xl:w-1/3">
					{
						heroImage && (
							<img
								class="w-auto block h-2 m-auto rounded-4xl shadow-[var(--box-shadow)]"
								// width={1020}
								// height={510}
								src={heroImage}
								alt=""
							/>
						)
					}
				</div>
				<!-- <div class="grow text-center">
					<h1>{title}</h1>
					<div class="flex gap-4 justify-center">

						{updatedDate?(
							updatedDate && (
									<span>Actualizado el{" "}</span>
									<FormattedDate date={updatedDate} />
							)
						):(
							<FormattedDate date={pubDate} />
						)}
					</div>
				</div> -->
			</div>
			<div class="w-full md:max-w-prose">
				<slot />
			</div>
		</article>

		<!-- <div class="prose">
					<hr />
				</div>
				<slot />
			</div> -->
	</main>
</Layout>
